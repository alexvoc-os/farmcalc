# Paginile HTML - fără cache
/
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

/*.html
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

# Next.js data - fără cache
/_next/data/*
  Cache-Control: no-cache, no-store, must-revalidate

# CSS și media - cache lung (au hash în nume)
/_next/static/css/*
  Cache-Control: public, max-age=31536000, immutable

/_next/static/media/*
  Cache-Control: public, max-age=31536000, immutable

# JS chunks - cache scurt
/_next/static/chunks/*
  Cache-Control: public, max-age=3600, stale-while-revalidate=86400
